{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../build/main",
    "allowJs": true,
    "noImplicitAny": false,
  },
  "exclude": ["static"],
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "../shared.d.ts"]
}
